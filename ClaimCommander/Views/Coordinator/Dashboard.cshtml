@model List<ClaimCommander.Models.Claim>
@{
    ViewData["Title"] = "Programme Coordinator Dashboard";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="mb-4">
    <h2 class="display-6 fw-bold">Programme Coordinator Dashboard</h2>
    <p class="text-secondary">Review and verify pending claims</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No pending claims to review at this time.
    </div>
}
else
{
    @foreach (var claim in Model)
    {
        <div class="card shadow-sm mb-3 border-2 border-warning">
            <div class="card-body">
                <div class="d-flex align-items-start">
                    <div class="claim-card-icon bg-warning">
                        <i class="bi bi-clock-history fs-4"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="mb-1">Claim #@claim.ClaimId</h5>
                                <p class="mb-0 text-secondary">Submitted by @claim.LecturerName</p>
                            </div>
                            <span class="badge bg-warning">PENDING REVIEW</span>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-auto">
                                <small><strong>Hours:</strong> @claim.HoursWorked</small>
                            </div>
                            <div class="col-auto">
                                <small><strong>Rate:</strong> @claim.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</small>
                            </div>
                            <div class="col-auto">
                                <small><strong>Total:</strong> @claim.ClaimValue.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</small>
                            </div>
                            <div class="col-auto">
                                <small><strong>Submitted:</strong> @claim.SubmissionDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(claim.Notes))
                        {
                            <div class="mt-2 p-2 bg-dark rounded">
                                <small><strong>Notes:</strong> @claim.Notes</small>
                            </div>
                        }

                        @if (claim.Documents.Any())
                        {
                            <div class="mt-3">
                                <small class="text-secondary"><strong>Supporting Documents:</strong></small>
                                @for (int i = 0; i < claim.Documents.Count; i++)
                                {
                                    var doc = claim.Documents[i];
                                    <div class="mt-1">
                                        <a asp-action="DownloadDocument" asp-route-claimId="@claim.ClaimId" asp-route-documentIndex="@i" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-file-earmark-arrow-down"></i> @doc.FileName
                                        </a>
                                        <small class="text-secondary">(@(doc.FileSize / 1024) KB - Uploaded @doc.UploadDate.ToString("MMM dd, yyyy"))</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="mt-2">
                                <small class="text-warning"><i class="bi bi-exclamation-triangle"></i> No supporting documents attached</small>
                            </div>
                        }
                    </div>
                </div>

                <div class="border-top mt-3 pt-3">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal@(claim.ClaimId)">
                                <i class="bi bi-x-circle"></i> Reject
                            </button>
                        </div>
                        <div class="col-md-6">
                            <form asp-action="VerifyClaim" asp-route-claimId="@claim.ClaimId" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Verify & Forward to Manager
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reject Modal -->
        <div class="modal fade" id="rejectModal@(claim.ClaimId)" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-dark">
                    <div class="modal-header">
                        <h5 class="modal-title" id="rejectModalLabel">Reject Claim #@claim.ClaimId</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-action="RejectClaim" asp-route-claimId="@claim.ClaimId" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="reason" class="form-label">Reason for Rejection</label>
                                <textarea name="reason" class="form-control" rows="3" placeholder="Please provide a reason for rejecting this claim..."></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}