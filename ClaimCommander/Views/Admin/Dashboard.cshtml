@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center">
    <div>
        <h2 class="display-6 fw-bold">Teaching Claims</h2>
    </div>
    <div>
        <select class="form-select d-inline-block w-auto me-2">
            <option selected>All Claims</option>
            <option value="1">Pending</option>
            <option value="2">Approved</option>
            <option value="3">Denied</option>
        </select>
        <span class="badge bg-warning-subtle text-warning-emphasis p-2 me-2">12 Pending</span>
        <span class="badge bg-success-subtle text-success-emphasis p-2">8 Approved</span>
    </div>
</div>

<div class="mt-4">
    <div class="card shadow-sm mb-4 border-2 border-warning">
        <div class="card-body p-3">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="rounded-circle bg-warning-subtle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <span class="fw-bold text-warning-emphasis">SM</span>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <p class="fw-semibold mb-0">Dr. Sarah Mitchell</p>
                    <small class="text-secondary">Mathematics Department</small>
                </div>
                <div class="flex-shrink-0">
                    <span class="badge bg-warning rounded-pill">PENDING</span>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <small class="text-secondary">Subject</small><p class="fw-medium">Advanced Calculus</p>
                </div>
                <div class="col text-end">
                    <small class="text-secondary">Hours Claimed</small><p class="fw-medium">24 hours</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <small class="text-secondary">Claim Value</small><p class="fw-bold fs-5 text-primary">R 7,200.00</p>
                </div>
                <div class="col text-end">
                    <small class="text-secondary">Submitted</small><p class="fw-medium">2 days ago</p>
                </div>
            </div>
            <hr>
            <div class="btn-group w-100">
                <a href="#" class="btn btn-outline-danger">Deny</a>
                <a href="#" class="btn btn-outline-warning">Review</a>
                <a href="#" class="btn btn-success">Approve</a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-2 border-success">
        <div class="card-body p-3">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="rounded-circle bg-success-subtle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <span class="fw-bold text-success-emphasis">JK</span>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <p class="fw-semibold mb-0">Prof. James Kowalski</p>
                    <small class="text-secondary">Physics Department</small>
                </div>
                <div class="flex-shrink-0">
                    <span class="badge bg-success rounded-pill">APPROVED</span>
                </div>
            </div>
            <hr>
            <div class="text-center text-success fw-semibold">
                ✓ Approved by Admin
            </div>
        </div>
    </div>
</div>