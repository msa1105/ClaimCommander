@model IEnumerable<ClaimCommander.Models.AdminClaimViewModel>
@{
    ViewData["Title"] = "Admin Dashboard";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="display-6 fw-bold">Teaching Claims</h2>
    </div>
    <div>
        <select class="form-select d-inline-block w-auto me-2">
            <option selected>All Claims</option>
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Denied">Denied</option>
        </select>
    </div>
</div>

<div class="mt-4">
    @foreach (var claim in Model)
    {
        var statusClass = claim.Status == "Approved" ? "success" : claim.Status == "Denied" ? "danger" : "warning";
        var statusIcon = claim.Status == "Approved" ? "bi-check-circle-fill" : claim.Status == "Denied" ? "bi-x-circle-fill" : "bi-clock-history";

        <div class="card claim-card shadow-sm mb-3 border-2 border-@statusClass">
            <div class="card-body">
                <div class="d-flex align-items-start">
                    <div class="claim-card-icon bg-@statusClass">
                        <i class="bi @statusIcon fs-4"></i>
                    </div>

                    <div class="flex-grow-1 ms-3">
                        <div class="d-flex justify-content-between">
                            <div>
                                <p class="fw-semibold mb-0">@claim.SubjectName</p>
                                <small class="text-secondary">Submitted by @claim.LecturerName (@claim.Department)</small>
                            </div>
                            <span class="badge rounded-pill bg-@statusClass bg-opacity-10 text-@statusClass border border-@statusClass border-opacity-10 fs-6 align-self-start">@claim.Status.ToUpper()</span>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-auto"><small>@claim.HoursWorked hours</small></div>
                            <div class="col-auto"><small>@claim.ClaimValue.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</small></div>
                            <div class="col-auto"><small>Submitted @claim.SubmittedAgo</small></div>
                        </div>
                    </div>
                </div>

                <div class="border-top mt-3 pt-3">
                    <div class="btn-group w-100" role="group">
                        <form asp-controller="Admin" asp-action="RejectClaim" asp-route-claimId="@claim.ClaimId" method="post" class="flex-fill">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">Deny</button>
                        </form>
                        <a href="#" class="btn btn-sm btn-outline-warning flex-fill">Review</a>
                        <form asp-controller="Admin" asp-action="ApproveClaim" asp-route-claimId="@claim.ClaimId" method="post" class="flex-fill">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-success w-100">Approve</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>