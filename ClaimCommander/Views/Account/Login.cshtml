@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}

<div class="login-container text-center">

    <h1 class="brand-title">ClaimCommander</h1>
    <p class="brand-subtitle">Lecturer & Admin Portal</p>

    <form asp-action="Login" method="post">
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email"></label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <label asp-for="Password"></label>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>
            <a href="#">Forgot password?</a>
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg" type="submit" style="padding: 0.75rem;">Sign In</button>
        </div>
    </form>
</div>