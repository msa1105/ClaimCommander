@model List<ClaimCommander.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="display-6 fw-bold">My Claims</h2>
        <p class="text-secondary">Track the status of your submitted claims</p>
    </div>
    <a asp-action="SubmitClaim" class="btn btn-primary">Submit New Claim</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> You haven't submitted any claims yet.
    </div>
}
else
{
    @foreach (var claim in Model)
    {
        var statusClass = claim.Status switch
        {
            "Pending" => "warning",
            "CoordinatorApproved" => "info",
            "ManagerApproved" => "success",
            "Rejected" => "danger",
            _ => "secondary"
        };

        var statusIcon = claim.Status switch
        {
            "Pending" => "bi-clock-history",
            "CoordinatorApproved" => "bi-arrow-right-circle-fill",
            "ManagerApproved" => "bi-check-circle-fill",
            "Rejected" => "bi-x-circle-fill",
            _ => "bi-question-circle"
        };

        var statusText = claim.Status switch
        {
            "CoordinatorApproved" => "Verified - Awaiting Manager Approval",
            "ManagerApproved" => "Fully Approved",
            _ => claim.Status
        };

        <div class="card claim-card shadow-sm mb-3 border-2 border-@statusClass">
            <div class="card-body">
                <div class="d-flex align-items-start">
                    <div class="claim-card-icon bg-@statusClass">
                        <i class="bi @statusIcon fs-4"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="mb-1">Claim #@claim.ClaimId</h5>
                                <p class="mb-0 text-secondary">@claim.LecturerName</p>
                            </div>
                            <span class="badge bg-@statusClass">@statusText.ToUpper()</span>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-auto">
                                <small><strong>Hours:</strong> @claim.HoursWorked</small>
                            </div>
                            <div class="col-auto">
                                <small><strong>Rate:</strong> @claim.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</small>
                            </div>
                            <div class="col-auto">
                                <small><strong>Total:</strong> @claim.ClaimValue.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</small>
                            </div>
                            <div class="col-auto">
                                <small><strong>Submitted:</strong> @claim.SubmissionDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(claim.Notes))
                        {
                            <div class="mt-2">
                                <small><strong>Notes:</strong> @claim.Notes</small>
                            </div>
                        }

                        @if (claim.Documents.Any())
                        {
                            <div class="mt-3">
                                <small class="text-secondary">Supporting Documents:</small>
                                @for (int i = 0; i < claim.Documents.Count; i++)
                                {
                                    var doc = claim.Documents[i];
                                    <div class="mt-1">
                                        <a asp-action="DownloadDocument" asp-route-claimId="@claim.ClaimId" asp-route-documentIndex="@i" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-download"></i> @doc.FileName
                                        </a>
                                        <small class="text-secondary">(@(doc.FileSize / 1024) KB)</small>
                                    </div>
                                }
                            </div>
                        }

                        @if (claim.Status == "Rejected" && !string.IsNullOrEmpty(claim.RejectionReason))
                        {
                            <div class="alert alert-danger mt-3 mb-0">
                                <strong>Rejection Reason:</strong> @claim.RejectionReason
                            </div>
                        }

                        @if (claim.Status == "Pending")
                        {
                            <div class="progress mt-3" style="height: 8px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 33%"></div>
                            </div>
                            <small class="text-secondary">Status: Pending Programme Coordinator Review</small>
                        }
                        else if (claim.Status == "CoordinatorApproved")
                        {
                            <div class="progress mt-3" style="height: 8px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 66%"></div>
                            </div>
                            <small class="text-secondary">Status: Verified by Coordinator, Awaiting Manager Approval</small>
                        }
                        else if (claim.Status == "ManagerApproved")
                        {
                            <div class="progress mt-3" style="height: 8px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                            </div>
                            <small class="text-secondary">Status: Fully Approved by Academic Manager</small>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}