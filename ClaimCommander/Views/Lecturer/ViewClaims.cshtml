@model ClaimCommander.Models.LecturerDashboardViewModel
@{
    ViewData["Title"] = "My Claims";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="display-6 fw-bold">My Submitted Claims</h2>
        <p class="text-secondary">A record of all the claims you have submitted.</p>
    </div>
    <a asp-action="SubmitClaim" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Submit New Claim
    </a>
</div>

<div>
    @if (Model.AllClaims != null && Model.AllClaims.Any())
    {
        foreach (var claim in Model.AllClaims)
        {
            var progressWidth = "0%";
            var progressBarBg = "bg-secondary";
            var progressText = claim.Status;

            switch (claim.Status)
            {
                case "Pending":
                    progressWidth = "33%";
                    progressBarBg = "bg-warning";
                    break;
                case "CoordinatorApproved":
                    progressWidth = "66%";
                    progressBarBg = "bg-info";
                    progressText = "Approved (Coordinator)";
                    break;
                case "ManagerApproved":
                case "Approved":
                    progressWidth = "100%";
                    progressBarBg = "bg-success";
                    progressText = "Approved";
                    break;
                case "Rejected":
                    progressWidth = "100%";
                    progressBarBg = "bg-danger";
                    break;
            }

            <div class="card claim-card shadow-sm mb-3">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between">
                                <p class="mb-0 fw-semibold text-light">Submitted on @claim.SubmissionDate.ToString("dd MMM yyyy")</p>
                                <p class="mb-0 fw-bold text-light">@claim.ClaimValue.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-1">
                                <p class="mb-0 text-secondary">Ref: #@claim.ClaimId.ToString("D4")</p>
                            </div>
                        </div>
                        <a href="#" class="btn btn-sm btn-outline-secondary ms-4 flex-shrink-0">View Details</a>
                    </div>
                    <div class="mt-3">
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar @progressBarBg" role="progressbar" style="width: @progressWidth" aria-valuenow="@progressWidth.Replace("%","")" aria-valuemin="0" aria-valuemax="100">
                                <strong>@progressText</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Total Hours Claimed</h5>
                        <p class="card-text display-5 fw-bold">@Model.TotalHoursClaimed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Total Amount Claimed</h5>
                        <p class="card-text display-5 fw-bold">@Model.TotalAmountClaimed.ToString("C0", new System.Globalization.CultureInfo("en-ZA"))</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Pending Claims</h5>
                        <p class="card-text display-5 fw-bold">@Model.PendingClaimsCount</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center card shadow-sm p-5">
            <h4>No Claims Found</h4>
            <p class="text-secondary mb-0">You have not submitted any claims yet.</p>
        </div>
    }
</div>